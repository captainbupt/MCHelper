<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_adapter_setting_measuring_subject"
            style="@style/layout_left_style"
            android:text="@string/setting_measuring_plan" />

        <TextView
            android:id="@+id/tv_adapter_setting_measuring_mode"
            style="@style/layout_right_style" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_adapter_setting_measuring_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/layout_left_style"
                android:text="@string/setting_measuring_time" />

            <LinearLayout
                style="@style/layout_right_style"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_adapter_setting_measuring_begin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/tv_adapter_setting_measuring_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medium" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/layout_left_style"
                android:text="@string/setting_measuring_interval"/>

            <LinearLayout
                style="@style/layout_right_style"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_adapter_setting_measuring_interval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分钟"
                    android:textSize="@dimen/text_size_medium" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/layout_left_style"
                android:text="@string/setting_measuring_variables" />


            <TextView
                android:id="@+id/tv_adapter_setting_measuring_variable"
                style="@style/layout_right_style"
                android:ellipsize="end"
                android:singleLine="true"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
