<?xml version="1.0" encoding="utf-8"?>
<org.holoeverywhere.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myattr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.holoeverywhere.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/offset_less"
            android:textSize="@dimen/text_size_medium" />

        <org.holoeverywhere.widget.Switch
            android:id="@+id/sw_setting_battery_pattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/offset_less"
            android:textOff="@string/setting_battery_pattern_off"
            android:textOn="@string/setting_battery_pattern_on"
            android:textSize="@dimen/text_size_medium" />
    </org.holoeverywhere.widget.LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider_line" />

    <com.vgomc.mchelper.widget.NoScrollListView
        android:id="@+id/nslv_setting_battery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myattr:dividerColor="@color/color_divider_line"
        myattr:dividerHeight="1dp"></com.vgomc.mchelper.widget.NoScrollListView>

</org.holoeverywhere.widget.LinearLayout>