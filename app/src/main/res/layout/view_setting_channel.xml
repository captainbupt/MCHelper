<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myattr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.vgomc.mchelper.widget.NoScrollListView
        android:id="@+id/nslv_setting_channel_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myattr:dividerColor="@color/color_divider_line"
        myattr:dividerHeight="1dp"></com.vgomc.mchelper.widget.NoScrollListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider_line" />

    <com.vgomc.mchelper.widget.NoScrollListView
        android:id="@+id/nslv_setting_channel_multiple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myattr:dividerColor="@color/color_divider_line"
        myattr:dividerHeight="1dp"></com.vgomc.mchelper.widget.NoScrollListView>
</LinearLayout>