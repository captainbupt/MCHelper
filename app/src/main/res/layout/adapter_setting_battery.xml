<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <org.holoeverywhere.widget.TextView
        android:id="@+id/tv_adapter_setting_battery_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/offset_less"
        android:textSize="@dimen/text_size_medium" />

    <RadioGroup
        android:id="@+id/rg_adapter_setting_battery_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/offset_small">

        <org.holoeverywhere.widget.RadioButton
            android:id="@+id/rb_adapter_setting_battery_mode_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_battery_channel_mode_order"
            android:textSize="@dimen/text_size_medium" />

        <org.holoeverywhere.widget.RadioButton
            android:id="@+id/rb_adapter_setting_battery_mode_always"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_battery_channel_mode_always"
            android:textSize="@dimen/text_size_medium" />
    </RadioGroup>

    <org.holoeverywhere.widget.LinearLayout
        android:id="@+id/ll_adapter_setting_battery_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <org.holoeverywhere.widget.EditText
            android:id="@+id/et_adapter_setting_battery_time_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_medium" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/tv_adapter_setting_battery_time_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="@dimen/text_size_medium" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/tv_adapter_setting_battery_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_medium" />
    </org.holoeverywhere.widget.LinearLayout>
</LinearLayout>