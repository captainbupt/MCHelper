<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_adapter_setting_battery_subject"
            style="@style/layout_left_style"
            android:paddingLeft="@dimen/offset_less" />

        <TextView
            android:id="@+id/tv_adapter_setting_battery_mode"
            style="@style/layout_right_style" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_adapter_setting_battery_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/layout_left_style"
                android:text="@string/setting_battery_pattern" />

            <TextView
                android:id="@+id/tv_adapter_setting_battery_pattern"
                style="@style/layout_right_style" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/layout_left_style"
                android:text="@string/setting_battery_time_begin" />

            <TextView
                android:id="@+id/tv_adapter_setting_battery_time_begin"
                style="@style/layout_right_style" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/layout_left_style"
                android:text="@string/setting_battery_time_live" />

            <TextView
                android:id="@+id/tv_adapter_setting_battery_time_last"
                style="@style/layout_right_style" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
