<?xml version="1.0" encoding="utf-8"?>
<org.holoeverywhere.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.holoeverywhere.widget.TextView
        style="@style/title_style"
        android:text="@string/setting_channel_title_sdi" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.holoeverywhere.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.holoeverywhere.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <org.holoeverywhere.widget.TextView
                    style="@style/layout_left_style"
                    android:text="@string/setting_channel_warm_time" />

                <org.holoeverywhere.widget.LinearLayout
                    style="@style/layout_right_style"
                    android:gravity="center_vertical">

                    <org.holoeverywhere.widget.EditText
                        android:id="@+id/et_activity_setting_channel_sdi_warm_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textSize="@dimen/text_size_medium" />

                    <org.holoeverywhere.widget.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/setting_channel_warm_time_unit"
                        android:textSize="@dimen/text_size_medium" />
                </org.holoeverywhere.widget.LinearLayout>
            </org.holoeverywhere.widget.LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider_line" />

            <com.vgomc.mchelper.widget.MultiVariableView
                android:id="@+id/mvv_activity_setting_channel_sdi_variables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </org.holoeverywhere.widget.LinearLayout>
    </ScrollView>
</org.holoeverywhere.widget.LinearLayout>