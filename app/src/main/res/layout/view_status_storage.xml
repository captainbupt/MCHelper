<?xml version="1.0" encoding="utf-8"?>
<org.holoeverywhere.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.holoeverywhere.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <org.holoeverywhere.widget.TextView
            style="@style/layout_left_style"
            android:text="@string/status_storage_memory" />

        <org.holoeverywhere.widget.LinearLayout
            style="@style/layout_right_style"
            android:orientation="vertical">

            <org.holoeverywhere.widget.ProgressBar
                android:id="@+id/pb_view_status_storage_memory"
                style="@style/Holo.ProgressBar.Horizontal.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/tv_view_status_storage_memory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_less" />
        </org.holoeverywhere.widget.LinearLayout>
    </org.holoeverywhere.widget.LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider_line" />

    <org.holoeverywhere.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <org.holoeverywhere.widget.TextView
            style="@style/layout_left_style"
            android:text="@string/status_storage_memory" />

        <org.holoeverywhere.widget.LinearLayout
            style="@style/layout_right_style"
            android:orientation="vertical">

            <org.holoeverywhere.widget.ProgressBar
                android:id="@+id/pb_view_status_storage_sdcard"
                style="@style/Holo.ProgressBar.Horizontal.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/tv_view_status_storage_sdcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_less" />
        </org.holoeverywhere.widget.LinearLayout>
    </org.holoeverywhere.widget.LinearLayout>

</org.holoeverywhere.widget.LinearLayout>