<?xml version="1.0" encoding="utf-8"?>
<org.holoeverywhere.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myattr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <org.holoeverywhere.widget.TextView
        android:id="@+id/tv_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_title_background" />

    <com.vgomc.mchelper.widget.NoScrollListView
        android:id="@+id/nslw_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myattr:dividerColor="@color/color_divider_line"
        myattr:dividerHeight="1dp">

    </com.vgomc.mchelper.widget.NoScrollListView>
</org.holoeverywhere.widget.LinearLayout>
