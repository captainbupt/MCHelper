<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/offset_less">

    <TextView
        android:id="@+id/tv_adapter_cloud_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/tv_adapter_cloud_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_less"
        android:layout_marginRight="@dimen/offset_less"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/tv_adapter_cloud_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_less"
        android:textSize="@dimen/text_size_medium" />
</LinearLayout>
