<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/layout_left_style"
            android:text="@string/data_current_detail_current" />

        <TextView
            android:id="@+id/tv_view_data_detail_table_current"
            style="@style/layout_right_style" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/layout_left_style"
            android:text="@string/data_current_detail_average" />

        <TextView
            android:id="@+id/tv_view_data_detail_table_average"
            style="@style/layout_right_style" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/layout_left_style"
            android:text="@string/data_current_detail_max" />

        <LinearLayout
            style="@style/layout_right_style"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_view_data_detail_table_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tv_view_data_detail_table_max_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/layout_left_style"
            android:text="@string/data_current_detail_min" />

        <LinearLayout
            style="@style/layout_right_style"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_view_data_detail_table_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tv_view_data_detail_table_min_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/layout_left_style"
            android:text="@string/data_current_detail_period" />

        <TextView
            android:id="@+id/tv_view_data_detail_table_period"
            style="@style/layout_right_style" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/layout_left_style"
            android:text="@string/data_current_detail_ever" />

        <LinearLayout
            style="@style/layout_right_style"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_view_data_detail_table_ever"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_medium" />

            <Button
                android:id="@+id/btn_view_data_detail_table_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_current_detail_reset"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
