<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="This is title" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/activity_main_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/activity_main_radio_button_1"
            style="@style/tab_style"
            android:drawableTop="@android:drawable/ic_menu_manage"
            android:text="@string/tab_title_setting" />

        <RadioButton
            android:id="@+id/activity_main_radio_button_2"
            style="@style/tab_style"
            android:drawableTop="@android:drawable/ic_menu_search"
            android:text="@string/tab_title_status" />

        <RadioButton
            android:id="@+id/activity_main_radio_button_3"
            style="@style/tab_style"
            android:drawableTop="@android:drawable/ic_menu_sort_by_size"
            android:text="@string/tab_title_data" />

        <RadioButton
            android:id="@+id/activity_main_radio_button_4"
            style="@style/tab_style"
            android:drawableTop="@android:drawable/ic_menu_help"
            android:text="@string/tab_title_system" />
    </RadioGroup>


    <android.support.v4.view.ViewPager
        android:id="@+id/activity_main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_main_radio_group"
        android:layout_below="@id/activity_main_action_bar"
        tools:context=".MainActivity" />
</RelativeLayout>