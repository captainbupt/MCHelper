<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myattrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <org.holoeverywhere.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_title_background"
        android:orientation="horizontal">

        <org.holoeverywhere.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/radio_left"
            android:padding="@dimen/offset_less"
            android:text="@string/setting_channel_multi_variable_sensor"
            android:textSize="@dimen/text_size_medium" />

        <org.holoeverywhere.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/radio_right"
            android:orientation="vertical"
            android:padding="@dimen/offset_less">

            <org.holoeverywhere.widget.Button
                android:id="@+id/btn_view_setting_channel_multi_variable_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_channel_multi_variable_sensor_add"
                android:textSize="@dimen/text_size_medium" />
        </org.holoeverywhere.widget.LinearLayout>
    </org.holoeverywhere.widget.LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider_line" />

    <com.vgomc.mchelper.widget.NoScrollListView
        android:id="@+id/nslv_view_setting_channel_multi_variable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myattrs:dividerColor="@color/color_divider_line"
        myattrs:dividerHeight="1dp" />
</LinearLayout>