<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_title_background"
        android:padding="@dimen/offset_less"
        android:text="@string/setting_channel_title_sht"
        android:textSize="@dimen/text_size_medium" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/layout_left_style"
            android:text="@string/setting_channel_warm_time" />

        <TextView
            android:id="@+id/tv_activity_setting_channel_sht_warm_time"
            style="@style/layout_right_style" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider_line" />

            <com.vgomc.mchelper.widget.VariableEditView
                android:id="@+id/vev_activity_setting_channel_sht_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider_line" />

            <com.vgomc.mchelper.widget.VariableEditView
                android:id="@+id/vev_activity_setting_channel_sht_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider_line" />

            <com.vgomc.mchelper.widget.VariableEditView
                android:id="@+id/vev_activity_setting_channel_sht_dew_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider_line" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
