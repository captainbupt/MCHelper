<?xml version="1.0" encoding="utf-8"?>
<org.holoeverywhere.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.holoeverywhere.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <org.holoeverywhere.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/radio_left"
            android:padding="@dimen/offset_less"
            android:text="@string/setting_network_mode"
            android:textSize="@dimen/text_size_medium" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/tv_view_setting_network_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/radio_right"
            android:padding="@dimen/offset_less"
            android:textSize="@dimen/text_size_medium" />

    </org.holoeverywhere.widget.LinearLayout>


    <org.holoeverywhere.widget.LinearLayout
        android:id="@+id/ll_view_setting_network_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <org.holoeverywhere.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <org.holoeverywhere.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/radio_left"
                android:padding="@dimen/offset_less"
                android:text="@string/setting_network_time"
                android:textSize="@dimen/text_size_medium" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/tv_view_setting_network_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/radio_right"
                android:padding="@dimen/offset_less"
                android:textSize="@dimen/text_size_medium" />
        </org.holoeverywhere.widget.LinearLayout>

        <org.holoeverywhere.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <org.holoeverywhere.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/radio_left"
                android:padding="@dimen/offset_less"
                android:text="@string/setting_network_address"
                android:textSize="@dimen/text_size_medium" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/tv_view_setting_network_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/radio_right"
                android:padding="@dimen/offset_less"
                android:textSize="@dimen/text_size_medium" />

        </org.holoeverywhere.widget.LinearLayout>

        <org.holoeverywhere.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <org.holoeverywhere.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/radio_left"
                android:padding="@dimen/offset_less"
                android:text="@string/setting_network_port"
                android:textSize="@dimen/text_size_medium" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/tv_view_setting_network_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/radio_right"
                android:padding="@dimen/offset_less"
                android:textSize="@dimen/text_size_medium" />

        </org.holoeverywhere.widget.LinearLayout>
    </org.holoeverywhere.widget.LinearLayout>
</org.holoeverywhere.widget.LinearLayout>