<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myattr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_title_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_adapter_setting_channel_multiple_subject"
            style="@style/layout_left_style" />

        <LinearLayout
            style="@style/layout_right_style"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_adapter_setting_channel_multiple_sensor_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tv_adapter_setting_channel_multiple_variable_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider_line" />

    <com.vgomc.mchelper.widget.NoScrollListView
        android:id="@+id/nslv_adapter_setting_channel_multiple_variables"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        myattr:dividerColor="@color/color_divider_line"
        myattr:dividerHeight="1dp" />
</LinearLayout>
